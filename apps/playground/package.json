{
	"name": "playground",
	"version": "1.0.1",
	"description": "Playground app for testing tmcp with MCP Inspector",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
