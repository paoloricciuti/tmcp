{
	"name": "@tmcpkit/adapter-zod",
	"version": "0.1.3",
	"description": "Zod adapter for TMCP JSON Schema conversion",
	"type": "module",
	"main": "src/index.js",
	"types": "src/index.d.ts",
	"scripts": {
		"generate:types": "tsc ./src/*.js --declaration --emitDeclarationOnly --target esnext --allowJs --moduleresolution nodenext --module nodenext && publint",
		"prepublish": "pnpm generate:types"
	},
	"exports": {
		".": {
			"types": "./src/index.d.ts",
			"default": "./src/index.js"
		},
		"./package.json": "./package.json"
	},
	"peerDependencies": {
		"tmcp": "workspace:^",
		"zod": "^4.0.0"
	},
	"dependencies": {
		"@standard-schema/spec": "^1.0.0",
		"@types/json-schema": "^7.0.15",
		"zod": "^4.0.5"
	},
	"keywords": [
		"tmcp",
		"zod",
		"jsonschema",
		"adapter"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/paoloricciuti/tmcp.git",
		"directory": "packages/adapter-zod"
	},
	"devDependencies": {
		"publint": "^0.3.12",
		"tmcp": "workspace:^"
	},
	"publishConfig": {
		"access": "public"
	}
}
