{
	"name": "@tmcp/transport-http",
	"version": "0.8.2",
	"description": "Transport for TMCP using HTTP",
	"type": "module",
	"main": "src/index.js",
	"types": "src/types/index.d.ts",
	"scripts": {
		"generate:types": "dts-buddy && publint",
		"prepublish": "pnpm generate:types",
		"test": "vitest --run"
	},
	"exports": {
		".": {
			"types": "./src/types/index.d.ts",
			"default": "./src/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"src/**/*"
	],
	"peerDependencies": {
		"tmcp": "workspace:^1.18.0",
		"@tmcp/auth": "^0.3.3 || ^0.4.0"
	},
	"peerDependenciesMeta": {
		"@tmcp/auth": {
			"optional": true
		}
	},
	"keywords": [
		"tmcp",
		"http",
		"transport"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/paoloricciuti/tmcp.git",
		"directory": "packages/transport-http"
	},
	"dependencies": {
		"@tmcp/session-manager": "workspace:^",
		"esm-env": "^1.2.2"
	},
	"devDependencies": {
		"@modelcontextprotocol/sdk": "^1.17.1",
		"@remix-run/node-fetch-server": "^0.12.0",
		"@tmcp/adapter-valibot": "workspace:^",
		"@tmcp/auth": "workspace:^",
		"@types/node": "^24.0.15",
		"dts-buddy": "^0.6.2",
		"publint": "^0.3.12",
		"tmcp": "workspace:^",
		"valibot": "^1.1.0",
		"vitest": "^4.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
