{
	"name": "@tmcp/transport-sse",
	"version": "0.5.1",
	"description": "Transport for TMCP using Server-Sent Events",
	"type": "module",
	"main": "src/index.js",
	"types": "src/types/index.d.ts",
	"scripts": {
		"generate:types": "dts-buddy && publint",
		"prepublish": "pnpm generate:types"
	},
	"exports": {
		".": {
			"types": "./src/types/index.d.ts",
			"default": "./src/index.js"
		},
		"./package.json": "./package.json"
	},
	"peerDependencies": {
		"tmcp": "workspace:^1.16.3",
		"@tmcp/auth": "^0.3.3 || ^0.4.0"
	},
	"peerDependenciesMeta": {
		"@tmcp/auth": {
			"optional": true
		}
	},
	"keywords": [
		"tmcp",
		"sse",
		"server-sent-events",
		"transport"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/paoloricciuti/tmcp.git",
		"directory": "packages/transport-sse"
	},
	"dependencies": {
		"@tmcp/session-manager": "workspace:^",
		"esm-env": "^1.2.2"
	},
	"devDependencies": {
		"@tmcp/auth": "workspace:^",
		"@types/node": "^24.9.1",
		"dts-buddy": "^0.6.2",
		"publint": "^0.3.12",
		"tmcp": "workspace:^"
	},
	"publishConfig": {
		"access": "public"
	}
}
