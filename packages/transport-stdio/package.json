{
	"name": "@tmcpkit/transport-stdio",
	"version": "0.1.0",
	"description": "Transport for TMCP using STDIO",
	"type": "module",
	"main": "src/index.js",
	"types": "src/index.d.ts",
	"scripts": {
		"generate:types": "tsc ./src/*.js --declaration --emitDeclarationOnly --target esnext --allowJs --moduleresolution nodenext --module nodenext && publint",
		"prepublish": "pnpm generate:types"
	},
	"exports": {
		".": {
			"types": "./src/index.d.ts",
			"default": "./src/index.js"
		},
		"./package.json": "./package.json"
	},
	"peerDependencies": {
		"tmcp": "workspace:^"
	},
	"keywords": [
		"tmcp",
		"stdio",
		"transport"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/paoloricciuti/tmcp.git",
		"directory": "packages/transport-stdio"
	},
	"devDependencies": {
		"@types/node": "^24.0.13",
		"publint": "^0.3.12",
		"tmcp": "workspace:^"
	},
	"publishConfig": {
		"access": "public"
	}
}
